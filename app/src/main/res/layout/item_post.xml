<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/User_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/talin"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/User_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/fontawesome_webfont"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/User_img"
            app:layout_constraintTop_toTopOf="parent"
            />



        <TextView
            android:id="@+id/Status_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hrs"
            android:textSize="15sp"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/fontawesome_webfont"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/User_img"
            app:layout_constraintTop_toBottomOf="@id/User_name"
            />

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/menu"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/Text_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asjdkjsaaksdsda\nasdhasjfadaadsfsdafsdafj\ndaskjdasafjjakjdsgf"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/fontawesome_webfont"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Status_time"/>

        <ImageView
            android:id="@+id/Image_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/talin"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Text_post"/>

        <TextView
            android:id="@+id/Like_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 likes"
            android:textSize="15sp"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/fontawesome_webfont"
            android:padding="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Image_post"/>

        <TextView
            android:id="@+id/share_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 shares"
            android:textSize="15sp"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/fontawesome_webfont"
            android:padding="7dp"
            app:layout_constraintTop_toBottomOf="@id/Image_post"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/guide_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintWidth_percent=".96"
            android:background="@color/colorBlueT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Like_counter"/>

        <Button
            android:id="@+id/Like_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".33"
            android:background="@color/colorWhite"
            android:text="Like"
            android:textSize="20sp"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/fontawesome_webfont"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide_line"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/Comment_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".33"
            android:background="@color/colorWhite"
            android:text="Comment"
            android:textSize="20sp"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/fontawesome_webfont"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/Like_btn"
            app:layout_constraintTop_toBottomOf="@id/guide_line"
            android:layout_margin="1dp"/>

        <Button
            android:id="@+id/Share_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".33"
            android:background="@color/colorWhite"
            android:text="Share"
            android:textSize="20sp"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/fontawesome_webfont"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/Comment_btn"
            app:layout_constraintTop_toBottomOf="@id/guide_line"
            android:layout_margin="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>