<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:id="@+id/TimeLine">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
            android:id="@+id/Self_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/talin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/Poost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".65"
            android:text="What's on  your Mind"
            android:fontFamily="@font/fontawesome_webfont"
            app:layout_constraintStart_toEndOf="@id/Self_img"
            android:background="@drawable/rounded_box"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:padding="3dp"
            app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/photo_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/Poost"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="4dp"/>





    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>